<h1>All Recipes</h1>
<%= link_to "Create a new recipe", new_recipe_path %><br><br>

<% Recipe::Categories.each do |category| %>
    <%= category.pluralize(2) %><br>
    <% @recipes.each do |recipe| %>
        <% if category == recipe.meal_category %>
            <%= link_to recipe.title, recipe_path(recipe) %><br>
        <% end %>
    <% end %><br>
<% end %>