<h1>All Recipes</h1>
<%= button_to "Create a new recipe", new_recipe_path, :method => "get" %><br><br>

<% Recipe::Categories.each do |category| %>
    <h2><%= category.pluralize(2) %></h2>
    <% @recipes.each do |recipe| %>
        <% if category == recipe.meal_category %>
            <%= link_to recipe.title, recipe_path(recipe) %><br>
        <% end %>
    <% end %><br>
<% end %>