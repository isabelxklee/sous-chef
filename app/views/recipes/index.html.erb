<h1>All Recipes</h1>

<div class="btn-group">
<%= link_to "<button>Create a recipe</button>".html_safe, new_recipe_path, :method => "get", class: "button" %>
</div>

<div class="body">
    <% Recipe::Categories.each do |category| %>
        <h2><%= category.pluralize(2) %></h2>
        <% @recipes.each do |recipe| %>
            <% if category == recipe.meal_category %>
                <%= link_to recipe.title, recipe_path(recipe) %><br>
            <% end %>
        <% end %><br>
    <% end %>
</div>